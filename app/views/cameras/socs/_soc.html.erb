<dl id="<%= soc.urlname %>" class="row mb-3 border-bottom">
  <dd class="col-8 col-sm-7 col-md-4 model">
    <%= soc.full_name %>
    <%= link_to "#", "/supported-hardware##{soc.urlname}", class: "anchor" %>
  </dd>
  <dd class="col-4 col-md-2 col-xl-2 hex_address">
    <%= soc.load_address %>
  </dd>
  <dd class="col-2 col-sm-1 col-md-1 stage <%= soc.status %>"><%= image_tag("stage-#{soc.status}") %></dd>
  <dd class="col-10 col-md-5 col-xl-5">
    <% if soc.instructable? %>
      <%= link_to t('.generate_guide'), cameras_vendor_soc_path(soc.vendor, soc) %>
    <% else %>
      <%= t('.no_solution_yet') %>
    <% end %>
  </dd>
</dl>
